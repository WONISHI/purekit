{
  "compilerOptions": {
    "target": "ES2019",
    "allowJs": true,
    "module": "ESNext",
    "allowImportingTsExtensions": false,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "stripInternal": false,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types"],
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
